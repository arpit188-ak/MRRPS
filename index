  <script>
    const loginForm = document.getElementById('loginForm');
    const loginPage = document.getElementById('loginPage');
    const dashboard = document.getElementById('dashboard');
    const class8Card = document.getElementById('class8Card');
    const class8Page = document.getElementById('class8Page');
    const teachersCard = document.getElementById('teachersCard');
    const teachersPage = document.getElementById('teachersPage');
    const backBtn = document.getElementById('backToDashboard');
    const backBtn2 = document.getElementById('backToDashboard2');

    const allowedUsers = [
      // Girls
      "Ariska","Sanskriti","Abhisha","Princee","Malti","Ksmha","Kratika","Jyoti","Renu","Mannat","Rajni","Ekta","Anjali",
      // Boys
      "Alok","Sarvan","Saurabh","Pranshu","Adarsh","Upendra","Bhanu","Devansh","Ankit","Ravi","Arpit","Rudra","Divyanshu",
      // Teachers
      "Bipin","Shudhir","Aditya"
    ];

    loginForm.addEventListener('submit', function(e) {
      e.preventDefault();
      const user = document.getElementById('username').value.trim();
      const pass = document.getElementById('password').value.trim();
      if(allowedUsers.includes(user) && pass === "1234"){
        loginPage.classList.remove('show');
        setTimeout(()=>{
          loginPage.style.display="none";
          dashboard.style.display="flex";
          setTimeout(()=>dashboard.classList.add('show'),50);
        },400);
      } else {
        alert("Invalid username or password!");
      }
    });

    // Class 8th Page
    class8Card.addEventListener("click", () => {
      dashboard.classList.remove("show");
      setTimeout(()=>{
        dashboard.style.display="none";
        class8Page.style.display="block";
        setTimeout(()=>class8Page.classList.add("show"),50);
      },400);
    });

    backBtn.addEventListener("click", () => {
      class8Page.classList.remove("show");
      setTimeout(()=>{
        class8Page.style.display="none";
        dashboard.style.display="flex";
        setTimeout(()=>dashboard.classList.add("show"),50);
      },400);
    });

    // Teachers Page
    teachersCard.addEventListener("click", () => {
      dashboard.classList.remove("show");
      setTimeout(()=>{
        dashboard.style.display="none";
        teachersPage.style.display="block";
        setTimeout(()=>teachersPage.classList.add("show"),50);
      },400);
    });

    backBtn2.addEventListener("click", () => {
      teachersPage.classList.remove("show");
      setTimeout(()=>{
        teachersPage.style.display="none";
        dashboard.style.display="flex";
        setTimeout(()=>dashboard.classList.add("show"),50);
      },400);
    });
  </script>
